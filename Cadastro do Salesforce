	}

	label {
		display: block;
		font-size: 16px;
		font-weight: bold;
		color: #333;
		margin-bottom: 10px;
	}

	input[type="checkbox"], input[type="radio"] {
		margin-right: 5px;
	}

	input[type="text"], input[type="number"], select {
		width: 100%;
		padding: 10px;
		margin-bottom: 20px;
		border: 1px solid #ccc;
		border-radius: 4px;
		box-sizing: border-box;
		font-size: 16px;
	}

	select {
